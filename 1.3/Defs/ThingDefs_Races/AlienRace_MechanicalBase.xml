<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Mechanical Android Base-->
	<AlienRace.ThingDef_AlienRace Name="BaseMechanicalPawn" ParentName="BasePawn" Abstract="True">
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<statBases>
			<Mass>70</Mass>
            <Flammability>0</Flammability>
			<PainShockThreshold>1</PainShockThreshold>
			<PsychicSensitivity>0</PsychicSensitivity>
			<ToxicSensitivity>0</ToxicSensitivity>
			<ImmunityGainSpeed>10</ImmunityGainSpeed>
			<LeatherAmount>0</LeatherAmount>
			<MeatAmount>0</MeatAmount>
		</statBases>
        <alienRace>
			<raceRestriction>
				<traitList>
					<li>FeelingsTowardOrganics</li>
				</traitList>
			</raceRestriction>
			<generalSettings>
				<allowHumanBios>false</allowHumanBios>
				<maxDamageForSocialfight>20</maxDamageForSocialfight>
				<immuneToAge>false</immuneToAge>
				<alienPartGenerator>
					<alienbodytypes>
						<li>Male</li>
					</alienbodytypes>
					<aliencrowntypes>
						<li>Average_Normal</li>
					</aliencrowntypes>
				</alienPartGenerator>
            </generalSettings>
			<styleSettings>
                <li>
                    <key>HairDef</key>
                    <value>
                        <hasStyle>false</hasStyle>
                    </value>
                </li>
				<li>
                    <key>BeardDef</key>
                    <value>
                        <hasStyle>false</hasStyle>
                    </value>
                </li>
				<li>
                    <key>TattooDef</key>
                    <value>
                        <hasStyle>false</hasStyle>
                    </value>
                </li>
            </styleSettings>
			<relationSettings>
				<relationChanceModifierChild>0</relationChanceModifierChild>
				<relationChanceModifierExLover>0</relationChanceModifierExLover>
				<relationChanceModifierExSpouse>0</relationChanceModifierExSpouse>
				<relationChanceModifierFiance>0</relationChanceModifierFiance>
				<relationChanceModifierLover>0</relationChanceModifierLover>
				<relationChanceModifierParent>0</relationChanceModifierParent>
				<relationChanceModifierSibling>0</relationChanceModifierSibling>
				<relationChanceModifierSpouse>0</relationChanceModifierSpouse>
			</relationSettings>
            <compatibility>
                <isFlesh>false</isFlesh>
            </compatibility>
        </alienRace>
		<race>
			<thinkTreeMain>Humanlike</thinkTreeMain>
			<thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
			<intelligence>Humanlike</intelligence>
			<makesFootprints>true</makesFootprints>
			<lifeExpectancy>100</lifeExpectancy>
			<leatherDef>Tainted_Skin</leatherDef>
			<nameGenerator>ATR_AndroidMaleNames</nameGenerator>
            <nameGeneratorFemale>ATR_AndroidFemaleNames</nameGeneratorFemale>
			<needsRest>false</needsRest>
			<foodType>OmnivoreHuman</foodType>
			<fleshType>AndroidTier</fleshType>
			<bloodDef>CoolantAndroidTier</bloodDef>
			<useMeatFrom>Alpaca</useMeatFrom>
			<canBePredatorPrey>false</canBePredatorPrey>
			<lifeStageAges>
				<li>
					<def>HumanlikeAdult</def>
					<minAge>0</minAge>
				</li>
			</lifeStageAges>
			<litterSizeCurve>
				<points>
					<li>(0.5, 0)</li>
					<li>(1, 1)</li>
					<li>(1.01, 0.02)</li>
					<li>(3.5, 0)</li>
				</points>
			</litterSizeCurve>
			<soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
			<specialShadowData>
				<volume>(0.3, 0.8, 0.4)</volume>
				<offset>(0,0,0)</offset>
			</specialShadowData>
			<ageGenerationCurve>
				<points>
					<li>(0,0)</li>
					<li>(1,400)</li>
					<li>(20,300)</li>
					<li>(50,200)</li>
					<li>(75,50)</li>
					<li>(100,15)</li>
					<li>(200,12)</li>
					<li>(400,8)</li>
					<li>(480,3)</li>
					<li>(500,0)</li>
				</points>
			</ageGenerationCurve>
			<hediffGiverSets>
				<li>ATR_MechanicalStandard</li>
			</hediffGiverSets>
		</race>
		<modExtensions>
			<li Class="ATReforged.MechCorpseTweaker">
				<tweakCorpseRot>true</tweakCorpseRot>
			</li>
		</modExtensions>
    </AlienRace.ThingDef_AlienRace>

    <!-- M-Series Base -->
	<AlienRace.ThingDef_AlienRace Name="BaseMSeriesPawn" ParentName="BaseMechanicalPawn" Abstract="True">
        <alienRace>
			<raceRestriction>
				<apparelList>
				</apparelList>
				<onlyUseRaceRestrictedApparel>true</onlyUseRaceRestrictedApparel>
				<weaponList>
					<li>RotaryAutocannon</li>
					<li>RotaryShrapnelcannon</li>
					<li>HeadhunterCannon</li>
					<li>MechPoleaxe</li>
				</weaponList>
				<onlyUseRaceRestrictedWeapons>true</onlyUseRaceRestrictedWeapons>
			</raceRestriction>
			<thoughtSettings>
				<cannotReceiveThoughtsAtAll>true</cannotReceiveThoughtsAtAll>
			</thoughtSettings>
        </alienRace>
        <race>
			<thinkTreeMain>Humanlike</thinkTreeMain>
			<thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
			<lifeExpectancy>1000</lifeExpectancy>
			<body>ATR_AndroidBody</body>
			<baseHungerRate>4</baseHungerRate>
			<baseHealthScale>7.5</baseHealthScale>
			<baseBodySize>5</baseBodySize>
			<ageGenerationCurve>
				<points>
					<li>(100,0)</li>
					<li>(200,2)</li>
					<li>(800,4)</li>
					<li>(2000,10)</li>
					<li>(8000,15)</li>
					<li>(10000,0)</li>
				</points>
			</ageGenerationCurve>
			<lifeStageAges>
				<li>
					<def>HumanlikeAdult</def>
					<minAge>0</minAge>
				</li>
			</lifeStageAges>
        </race>
        <recipes>
            <li>ShutdownMechanical</li>
            <li>RemoveBodyPartAndroid</li>
            <li>RestoreBodyPartAndroid</li>
        </recipes>
	</AlienRace.ThingDef_AlienRace>

</Defs>